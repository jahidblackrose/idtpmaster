
@model QRCodeViewModel
@{
    ViewData["Title"] = "ManageFlaggedTransaction";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">QR Code Generation</h4>
                    <div class="form-validation">
                        <form asp-action="Index" asp-controller="QRCode" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label" for="name">
                                    Recipient Name
                                </label>
                                <div class="col-lg-5">
                                    <input value="@Model.RecipientName" type="text" class="form-control" id="name" name="name" placeholder="Enter recipient name" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label" for="amount">
                                    Payment Amount
                                </label>
                                <div class="col-lg-5">
                                    <input value="@Model.Amount" type="text" class="form-control" id="amount" name="amount" placeholder="Enter amount" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label" for="pin">
                                    PIN Number
                                </label>
                                <div class="col-lg-5">
                                    <input value="@Model.PIN" type="password" name="pin" id="pin" class="form-control" placeholder="Enter PIN" minlength="6" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-8" style="text-align:right">
                                    <button type="submit" class="btn btn-primary" id="btnSubmit" data-toggle="modal">Generate QR Code</button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div>
                        @{
                            if (Model.QRCodeImage != null) {
                                <h4>QR Code Successfully Generated</h4>
                                <img src="@String.Format("data:image/png;base64,{0}", Model.QRCodeImage)" />
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

