
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">List of Users</h4>
                    <div class="default-tab">
                        <ul class="nav nav-tabs mb-3" role="tablist">
                            <li class="nav-item">
                                <a id="Admin" class="userType nav-link active" data-toggle="tab" href="#user">User</a>
                            </li>
                            <li class="nav-item">
                                <a id="Business" class="userType nav-link" data-toggle="tab" href="#business-div">Business</a>
                            </li>
                            <li class="nav-item">
                                <a id="GovtInstitute" class="userType nav-link" data-toggle="tab" href="#govtentity">Government Entity</a>
                            </li>
                            <li class="nav-item">
                                <a id="FinInstitute" class="userType nav-link" data-toggle="tab" href="#fininancialinstitution">Financial Institution</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="user" role="tabpanel">

                                <div class="p-t-15">
                                    <a href="/Identity/Account/Register?userType=Admin" class="btn btn-primary" style="margin-left: 30px;">Add IDTPAdmin</a>
                                    <table class="table table-striped table-bordered zero-configuration">
                                        <thead>
                                            <tr>
                                                <th>UserName</th>
                                                <th>Email</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.adminList)
                                            {
                                                var mid = "modal" + item.Id;
                                                var tm = "#modal" + item.Id;
                                                <tr>
                                                    <td>@item.LoginId</td>
                                                    <td>@item.Email</td>
                                                    <td>
                                                        <span>
                                                            <a asp-action="Edit" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top"
                                                               title="Edit">
                                                                <i class="fa fa-pencil color-muted m-r-5"></i>
                                                            </a>
                                                            @*<a asp-action="Delete" asp-route-id="@item.Id" asp-route-Type="Admin" data-target="" data-toggle="tooltip" data-placement="top"
                           title="Delete" style="padding-left:10px;">
                            <i class="fas fa-trash-alt color-muted m-r-5"></i>
                        </a>*@
                                                            <a data-target="@tm" data-toggle="modal" href="@mid" style="padding-left:10px;">
                                                                <i class="fas fa-trash-alt color-muted m-r-5"></i>
                                                            </a>
                                                        </span>
                                                    </td>
                                                </tr>
                                                <div class="modal fade" id="@mid">
                                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Delete Confirmation</h5>
                                                                <button type="button" class="close" data-dismiss="modal">
                                                                    <span>&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p>Are you sure you want to delete user <b>@item.LoginId</b>?</p>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                                <a  asp-action="Delete" asp-route-id="@item.Id" asp-route-Type="Admin" id="deleteBtn" class="btn btn-danger">Delete</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                            <div class="tab-pane fade" id="business-div">
                                <div class="p-t-15">
                                    <a href="/Identity/Account/Register?userType=Business" class="btn btn-primary" style="margin-left: 30px;">Add Business</a>
                                    <table class="table table-striped table-bordered zero-configuration">
                                        <thead>
                                            <tr>
                                                <th>UserName</th>
                                                <th>Email</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.businessList)
                                            {
                                                <tr>
                                                    <td>@item.LoginId</td>
                                                    <td>@item.Email</td>
                                                    <td>
                                                        <span>
                                                            <a asp-action="Edit" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top"
                                                               title="Edit">
                                                                <i class="fa fa-pencil color-muted m-r-5"></i>
                                                            </a>
                                                            <a asp-action="Delete" asp-route-id="@item.Id" asp-route-Type="Business" data-toggle="tooltip" data-placement="top"
                                                               title="Delete" style="padding-left:10px;">
                                                                <i class="fas fa-trash-alt color-muted m-r-5"></i>
                                                            </a>
                                                        </span>
                                                    </td>
                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="govtentity">
                                <div class="p-t-15">
                                    <a href="/Identity/Account/Register?userType=GovtInstitute" class="btn btn-primary" style="margin-left: 30px;">Add Govt. Insitution</a>
                                    <table class="table table-striped table-bordered zero-configuration">
                                        <thead>
                                            <tr>
                                                <th>UserName</th>
                                                <th>Email</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.govtList)
                                            {
                                                <tr>
                                                    <td>@item.LoginId</td>
                                                    <td>@item.Email</td>
                                                    <td>
                                                        <span>
                                                            <a asp-action="Edit" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top"
                                                               title="Edit">
                                                                <i class="fa fa-pencil color-muted m-r-5"></i>
                                                            </a>
                                                            <a asp-action="Delete" asp-route-id="@item.Id" asp-route-Type="GovtInstitute" data-toggle="tooltip" data-placement="top"
                                                               title="Delete" style="padding-left:10px;">
                                                                <i class="fas fa-trash-alt color-muted m-r-5"></i>
                                                            </a>
                                                        </span>
                                                    </td>
                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="fininancialinstitution">
                                <div class="p-t-15">
                                    <a href="/Identity/Account/Register?userType=FinInstitute" class="btn btn-primary" style="margin-left: 30px;">Add Financial Institution</a>
                                    <table class="table table-striped table-bordered zero-configuration">
                                        <thead>
                                            <tr>
                                                <th>UserName</th>
                                                <th>Email</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.financialInstituteList)
                                            {
                                                <tr>
                                                    <td>@item.LoginId</td>
                                                    <td>@item.Email</td>
                                                    <td>
                                                        <span>
                                                            <a asp-action="Edit" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top"
                                                               title="Edit">
                                                                <i class="fa fa-pencil color-muted m-r-5"></i>
                                                            </a>
                                                            <a asp-action="Delete" asp-route-id="@item.Id" asp-route-Type="FinInstitute" data-toggle="tooltip" data-placement="top"
                                                               title="Delete" style="padding-left:10px;">
                                                                <i class="fas fa-trash-alt color-muted m-r-5"></i>
                                                            </a>
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>

</div>


<script>
    $(document).ready(function () {
        var form = '@TempData["form"]';
        if (form != null && form != "") {
            $('#' + form).click();
        }
    });

</script>