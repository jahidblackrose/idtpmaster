
@{
    ViewData["Title"] = "Settlement Home";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

    <div class="container-fluid mt-3">
        <div class="bootstrap-modal">
            <div class="modal fade" id="settlementLoading">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Settlement Started</h5>
                        </div>
                        <div class="modal-body bg-info-lighten-2">Settlement In Progress...</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h5>Management</h5><br>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-sm-6">
                <a href="/settlement/transactionlist">

                    <div class="card gradient-1">
                        <div class="card-body">
                            <h3 class="card-title text-white">Transaction List</h3>
                            <div class="d-inline-block">
                                <p class="text-white mb-0">List of all the transactions</p>
                            </div>
                            <span class="float-right display-5 opacity-5"><i class="fas fa-list-alt"></i></span>
                        </div>

                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6" id="BBsettlementDiv">

                <a href="/settlement/settlement">

                    <div class="card gradient-1">
                        <div class="card-body">
                            <h3 class="card-title text-white">Bangladesh Bank Settlement</h3>
                            <div class="d-inline-block">
                                <p class="text-white mb-0"></p>
                            </div>
                            <span class="float-right display-5 opacity-5"><i class="fa fa-handshake-o"></i></span>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-lg-4 col-sm-6">

                <a href="/settlement/List">

                    <div class="card gradient-1">
                        <div class="card-body">
                            <h3 class="card-title text-white">Settlement List</h3>
                            <div class="d-inline-block">
                                <p class="text-white mb-0"></p>
                            </div>
                            <span class="float-right display-5 opacity-5"><i class="fa fa-handshake-o"></i></span>
                        </div>
                    </div>
                </a>
            </div>

        </div>


    </div>

<script>
    $(document).ready(function () {
        
        var txnId = '@TempData["TxSts"]';
        $('#BBsettlementDiv').on("click", function () {
            $('#settlementLoading').modal('show')
        });
        if (txnId == "Null") {
            swal("All Done!", "Settlements are already done for today", "info");
        }
        else if (txnId != null && txnId != "") {
            swal("Success!", "Settlement was Successful", "success");
        }
    });
</script>