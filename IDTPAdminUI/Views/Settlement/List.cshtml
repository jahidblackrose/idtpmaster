@model IEnumerable<IDTPDataTransferObjects.SettlementDTO>;
@{
    ViewData["Title"] = "BB Settlements";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Settlements with Bangladesh Bank</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>Date Modified</th>
                                    <th>Participant Name</th>
                                    <th>SwiftBic</th>
                                    <th>Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ModifiedOn</td>
                                        <td>@item.BankName</td>
                                        <td>@item.SwiftBic</td>
                                        <td>@item.Balance</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

