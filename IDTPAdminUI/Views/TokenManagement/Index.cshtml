
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-lg-4" style="margin-bottom:10px;">
            <a class="btn btn-primary" href="/TokenManagement/Edit">Add App</a>
        </div>

        <div class="col-lg-12">
            <div class="card">
                <table class="table table-striped table-bordered zero-configuration">
                    <thead>
                        <tr>
                            <th>App Name</th>
                            <th>Token</th>
                            <th>Expiry Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.tokenList)
                        {
                            var mid = "modal" + item.Id;
                            var tm = "#modal" + item.Id;
                            <tr>
                                <td>@item.AppName</td>
                                <td>@item.Token</td>
                                <td>@item.TokenExpiryDate</td>
                                <td>
                                    <a>Reset</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        var token = '@TempData["token"]';
        if (token != null & token != "") {
            $("#btnGet").html('Reset');
            $('#token').val(token)
        }
    });
</script>
