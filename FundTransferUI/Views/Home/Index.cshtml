@model IEnumerable<FundTransferUI.Models.TransactionViewModel>;
@{

    ViewData["Title"] = "Transfer Fund";
    Layout = "~/Views/Shared/_LayoutTransferDashboard.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Transaction List</h4>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration" id="employeeList">
                            <thead>
                                <tr>

                                    <th>Transaction ID</th>
                                    <th>Sender Name</th>
                                    <th>Sender Account No</th>
                                    <th>Sender Bank Name</th>
                                    <th>Settlement Status</th>
                                    <th>Receiver Name</th>
                                    <th>Receiver Account No</th>
                                    <th>Receiver Bank Name</th>
                                    <th>Amount</th>
                                    <th>Transaction Date</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.TransactionId</td>
                                    <td>@item.SenderName</td>
                                    <td>@item.SenderAccountNo</td>
                                    <td>@item.SenderBankName</td>
                                    <td>@item.SettlementStatus</td>
                                    <td>@item.ReceiverName</td>
                                    <td>@item.ReceiverAccountNo</td>
                                    <td>@item.ReceiverBankName</td>
                                    <td>@item.Amount</td>
                                    <td>@item.TransactionDate</td>
                                    @*<td>
            <span><a href="#" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i> </a></span>
            &nbsp;&nbsp;
            <span><a href="#" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash-alt color-muted m-r-5"></i> </a></span>
        </td>*@
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        $('#employeeList').DataTable( {
        "order": [[ 9, "desc" ]]
    } );
} );
</script>